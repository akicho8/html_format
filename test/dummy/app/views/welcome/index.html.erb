<% table_class = "table table-striped table-bordered table-hover table-condensed" %>
<% options = {:table_class => table_class} %>

<%#= quick_table(options) { [{"項目" => :id, "値" => [{:a => 1, :b => 2}, {:a => 1, :b => 2}]}]  } %>
<%#= quick_table(options) { {:a => 1, :b => 1} } %>
<%= quick_table(options) { [[:a, :b], [ 1,  2], [ 3,  4]] } %>

<% if false %>
  <%= quick_table(options) {} %>
  <%= quick_table(options) { :a } %>
  <%= quick_table(options) { {:a => 1, :b => 1} } %>
  <%= quick_table(options) { [{:a => 1, :b => 2}, {:a => 3, :b => 4}] } %>
  <%= quick_table(options.merge(:skip_header => true)) { [{:a => 1, :b => 2}, {:a => 3, :b => 4}] } %>
  <%= quick_table(options) { [[:a, :b], [ 1,  2], [ 3,  4]] } %>
  <%= quick_table(options) { [:a, :b] } %>
  <%= quick_table(options) { :a } %>

  <%= quick_table(options.merge(:responsive => true, :title => "title")) { "あ" * 100 } %>
  <%= quick_table(options.merge(:responsive => true, :caption => "caption")) { "あ" * 100 } %>

  <% v1 = [{:a => 1, :b => 2}, {:a => 3, :b => 4}] %>
  <%= quick_table(options) { [{:a => v1}] } %>
<% end %>
